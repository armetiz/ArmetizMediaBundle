<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="leezy.media.cdn.class">Leezy\MediaBundle\CDN\Server</parameter>
        <parameter key="leezy.media.manager.class">Leezy\MediaBundle\MediaManager</parameter>
        <parameter key="leezy.media.provider.file.class">Leezy\MediaBundle\Provider\FileProvider</parameter>
        <parameter key="leezy.media.context.class">Leezy\MediaBundle\Context\Context</parameter>
        <parameter key="leezy.media.cdn.class">Leezy\MediaBundle\CDN\Server</parameter>
        <parameter key="leezy.media.generator.path.class">Leezy\MediaBundle\Generator\DefaultFilePathGenerator</parameter>
        <parameter key="gaufrette.filesystem.class">Gaufrette\Filesystem</parameter>
        <parameter key="gaufrette.adapter.class">Gaufrette\Adapter\Local</parameter>
        <parameter key="leezy.media.listener.doctrine.class">Leezy\MediaBundle\Listener\DoctrineListener</parameter>
        <parameter key="leezy.twig.extension.media.class">Leezy\MediaBundle\Twig\Extension\MediaExtension</parameter>
        <parameter key="leezy.templating.helper.media.class">Leezy\MediaBundle\Templating\Helper\MediaHelper</parameter>
        
        <parameter key="leezy.media.twig.subtitle.view">LeezyMediaBundle:Subtitle:default.html.twig</parameter>
    </parameters>

    <services>
        <!-- externalize using extension system -->
        <service id="leezy.media.context.subtitle" class="%leezy.media.context.class%" public="false">
            <argument>subtitle</argument>
            <argument type="service" id="leezy.media.provider.file.subtitle" />
            <call method="addManagedClass"><argument>Leezy\SubtitleBundle\Models\Entity\Subtitle</argument></call>
        </service>
        
        <service id="leezy.media.context.video" class="%leezy.media.context.class%" public="false">
            <argument>video</argument>
            <argument type="service" id="leezy.media.provider.file.video" />
            <call method="addManagedClass"><argument>Leezy\VideoBundle\Models\Entity\Video</argument></call>
        </service>
        
        <service id="leezy.media.provider.file.subtitle" class="%leezy.media.provider.file.class%" public="false">
            <argument type="service" id="gaufrette.filesystem" />
            <argument type="service" id="leezy.media.cdn" />
            <argument type="string">%leezy.media.generator.path.class%</argument>
            <argument type="string">subtitle</argument>
            <argument type="string">%leezy.media.twig.subtitle.view%</argument>
        </service>
        
        <service id="leezy.media.provider.file.video" class="%leezy.media.provider.file.class%" public="false">
            <argument type="service" id="gaufrette.filesystem" />
            <argument type="service" id="leezy.media.cdn" />
            <argument type="string">%leezy.media.generator.path.class%</argument>
            <argument type="string">video</argument>
        </service>
               
        <service id="leezy.media.cdn" class="%leezy.media.cdn.class%" public="false">
            <argument>http://localhost:8888/LeezyServer/web/medias</argument>
        </service>
        
        <service id="gaufrette.adapter" class="%gaufrette.adapter.class%" public="false">
            <argument>%kernel.root_dir%/../web/medias</argument>
        </service>
        
        <service id="leezy.media.manager" class="%leezy.media.manager.class%">
            <argument type="collection"/>
            <argument type="service" id="event_dispatcher" on-invalid="ignore"/>
            <call method="addContext">
                <argument type="service" id="leezy.media.context.subtitle" />
            </call>
            <call method="addContext">
                <argument type="service" id="leezy.media.context.video" />
            </call>
        </service>
        
        
        
        
        <service id="gaufrette.filesystem" class="%gaufrette.filesystem.class%" public="false">
            <argument type="service" id="gaufrette.adapter" />
        </service>
        
        <service id="leezy.media.listener.doctrine" class="%leezy.media.listener.doctrine.class%" public="false">
            <argument type="service" id="leezy.media.manager" />
            <tag name="doctrine.event_listener" event="prePersist" method="prePersist" />
            <tag name="doctrine.event_listener" event="preUpdate" method="preUpdate"/>
            <tag name="doctrine.event_listener" event="postPersist" method="postPersist"/>
            <tag name="doctrine.event_listener" event="postUpdate" method="postUpdate"/>
            <tag name="doctrine.event_listener" event="preRemove" method="preRemove"/>
        </service>
        
        <service id="leezy.templating.helper.media" class="%leezy.templating.helper.media.class%" public="false">
            <tag name="templating.helper" alias="media" />
            <argument type="service" id="service_container" />
        </service>
        
        <service id="leezy.twig.extension.media" class="%leezy.twig.extension.media.class%" public="false">
            <tag name="twig.extension" alias="media" />
            <argument type="service" id="leezy.templating.helper.media" />
        </service>
    </services>
</container>
